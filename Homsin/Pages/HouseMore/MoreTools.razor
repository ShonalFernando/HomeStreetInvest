@page "/Housing/More"

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/Housing/Library">Library</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Housing/Estimations">Estimate</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" href="/Housing/Ads">Sell</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link active" href="/Housing/More">More</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container-fluid" style="background-color:#4C86A8; padding-top:20px; padding-bottom:20px;">
    <div class="row">
        <div class="col-sm-10">
            <button type="button" class="btn btn-outline-info" @onclick="@(() => SetView(MoreView.CreatePost))">Create Post</button>
            <button type="button" class="btn btn-outline-info" @onclick="@(() => SetView(MoreView.MyPosts))">My Posts</button>
            <button type="button" class="btn btn-outline-info" @onclick="@(() => SetView(MoreView.MyEstimates))">My Estimates</button>
        </div>
    </div>
</div>

<br />
<br />

@switch (_currentView)
{
    case MoreView.CreatePost:
        <PostCreate></PostCreate>
        break;
    case MoreView.MyPosts:
        <PostMy></PostMy>
        break;
    case MoreView.MyEstimates:
        <EstimatesMy></EstimatesMy>
        break;

}

@code 
{
    public enum MoreView
    {
        CreatePost,
        MyPosts,
        MyEstimates
    }

    private MoreView _currentView;

    private void SetView(MoreView _moreView)
    {
        _currentView = _moreView;
    }
}
