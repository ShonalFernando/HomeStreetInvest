@page "/Housing/Library"

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link active" href="/Housing/Library">Library</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Housing/Estimations">Estimate</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Housing/Ads">Sell</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Housing/More">More</a>
                </li>
            </ul>
        </div>
</nav>

<div class="container-fluid" style="background-color:#4C86A8; padding-top:20px; padding-bottom:20px;">
    <div class="row">
        <div class="col-sm-10">
            <button type="button" class="btn btn-outline-info" @onclick="@(() => SetListingView(ListingView.AllAds))">Ads</button>
            <button type="button" class="btn btn-outline-info" @onclick="@(() => SetListingView(ListingView.Estimates))">Estimates</button>
            <button type="button" class="btn btn-outline-info" @onclick="@(() => SetListingView(ListingView.Feed))">Feed</button>
        </div>
        <div class="col-sm-2">
            <select class="form-control" id="exampleFormControlSelect1" style="padding-right:10px;">
                <option>Newest</option>
                <option>Category</option>
                <option>Oldest</option>
            </select>
        </div>
    </div>
</div>

<br />
<br />

@switch(_currentListingView)
{
    case ListingView.AllAds:
        <LibraryAllAds></LibraryAllAds>
        break;
    case ListingView.Feed:
        <LibraryFeed></LibraryFeed>
        break;
    case ListingView.Estimates:
        <LibraryEstimates></LibraryEstimates>
        break;

}


@code 
{
    public enum ListingView
    {
        AllAds,
        Estimates,
        Feed
    }

    private ListingView _currentListingView;

    private void SetListingView(ListingView ListingView)
    {
        _currentListingView = ListingView;
    }

}
